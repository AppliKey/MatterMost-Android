<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_header_height"
    android:paddingTop="@dimen/status_bar_height"
    android:minHeight="@dimen/drawer_header_height"
    android:background="@color/unread_background"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/drawer_header_avatar_size"
        android:layout_height="@dimen/drawer_header_avatar_size"
        android:layout_marginStart="@dimen/drawer_header_avatar_margin"
        tools:src="@drawable/bg_added_people_count" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_avatar"
        android:layout_marginStart="@dimen/normal"
        android:layout_toEndOf="@id/iv_avatar"
        android:textColor="@color/textListPrimary"
        android:textSize="@dimen/text_primary_button"
        tools:text="Zabelnikov Sergey" />

    <TextView
        android:id="@+id/tv_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_avatar"
        android:layout_marginStart="@dimen/normal"
        android:layout_toEndOf="@id/iv_avatar"
        android:textColor="@color/textListSecondary"
        android:textSize="@dimen/text_primary_button"
        tools:text="Applikey Sollutions" />

</RelativeLayout>
