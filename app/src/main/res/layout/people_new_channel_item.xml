<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?attr/selectableItemBackground"
    android:paddingTop="@dimen/pending_people_item_top_margin"
    android:paddingBottom="@dimen/pending_people_item_bottom_margin"
    android:paddingLeft="@dimen/dialog_create_channel_content_padding"
    android:paddingRight="@dimen/dialog_create_channel_content_padding"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_pending_people_avatar"
        android:layout_width="@dimen/pending_people_avatar_width"
        android:layout_height="@dimen/pending_people_avatar_height"
        android:layout_marginEnd="@dimen/normal"
        tools:background="#AA45CB"
        android:layout_gravity="start" />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/tv_added_member"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:text = "Denis Nikiforov"
        android:textSize="@dimen/settings_element_text_size" />

    <CheckBox
        android:id="@+id/cb_is_member_added"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@null"
        android:button="@drawable/bg_pending_member_item"
        />
</LinearLayout>
