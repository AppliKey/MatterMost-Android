<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_join_offer"
        tools:text="Do yout want to join #cool_chat?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="middle"
        android:gravity="center"
        android:textColor="@color/textlinkDisabled"
        android:textSize="@dimen/text_title_size" />

    <com.applikey.mattermost.views.SafeButton
        android:id="@+id/btn_join_channel"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/large"
        android:layout_marginStart="@dimen/large"
        android:layout_marginTop="@dimen/large"
        android:text="@string/join"
        android:textSize="@dimen/text_heading_size" />
</LinearLayout>
