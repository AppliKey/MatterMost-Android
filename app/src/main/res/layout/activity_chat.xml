<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
                                                 android:animateLayoutChanges="true"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:contentInsetStartWithNavigation="60dp"
            app:elevation="2dp" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/image_button_dimen_large"
        android:background="@color/background"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_messages"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                tools:listitem="@layout/list_item_post_my" />

            <TextView
                android:id="@+id/tv_empty_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/no_posts_to_display" />

        </FrameLayout>

    </android.support.v4.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/ll_reply"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_button_dimen_large"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_reply_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/normal"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="@dimen/small"
            android:drawableStart="@drawable/line"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textSize="@dimen/text_primary_button"
            tools:text="User Message"/>

        <ImageView
            android:id="@+id/iv_reply_close"
            style="@style/ImageButton"
            android:layout_width="@dimen/image_button_dimen_large"
            android:layout_height="@dimen/image_button_dimen_large"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:scaleType="center"
            android:src="@drawable/ic_close"/>

    </LinearLayout>

    <View
        android:id="@+id/view_reply_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separator_list"
        android:visibility="gone"
        tools:visibility="visible"/>

    <LinearLayout
        android:id="@+id/l_message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_button_dimen_large"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_attach"
            style="@style/ImageButton"
            android:layout_width="@dimen/image_button_dimen_large"
            android:layout_height="@dimen/image_button_dimen_large"
            android:layout_gravity="center"
            android:scaleType="center"
            android:src="@drawable/ic_attach"/>

        <EditText
            android:id="@+id/et_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:fontFamily="sans-serif-light"
            android:hint="@string/message"
            android:textColorHint="@color/textSecondary"/>

        <ImageView
            android:id="@+id/iv_send_message"
            style="@style/ImageButton"
            android:layout_width="@dimen/image_button_dimen_large"
            android:layout_height="@dimen/image_button_dimen_large"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:scaleType="center"
            android:src="@drawable/ic_send"/>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
