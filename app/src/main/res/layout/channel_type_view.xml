<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:parentTag="LinearLayout">

    <TextView
        android:id="@+id/tvTypePublic"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/channel_type_margin"
        android:drawablePadding="@dimen/switch_channel_type_icon_margin"
        android:gravity="center"
        android:text="@string/public_channel" />


    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch_channel_type"
        android:theme="@style/SwitchChannelType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />


    <TextView
        android:id="@+id/tvTypePrivate"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/channel_type_margin"
        android:drawablePadding="@dimen/switch_channel_type_icon_margin"
        android:gravity="center"
        android:text="@string/private_channel" />

</merge>
