<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:gravity="center_vertical"
    android:minHeight="@dimen/vertical_min_height"
    android:orientation="vertical">

    <TextView
        android:id="@+id/name"
        style="?android:attr/spinnerItemStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_forward_shevron"
        android:drawablePadding="@dimen/image_button_padding"
        android:maxLines="1"
        android:textSize="@dimen/spinner_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/edit_text_push_right"
        android:layout_marginTop="8dp"
        android:background="@color/separator_light" />
</LinearLayout>
