<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:clickable">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:background">@drawable/round_button_gradient</item>
        <item name="android:textSize">@dimen/text_primary_button</item>
    </style>

    <style name="AppToolbar" parent="Base.ThemeOverlay.AppCompat.Light">
        <item name="contentInsetStartWithNavigation">60dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="CircularCounter">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BorderlessButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="TextWelcomeHeading">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/text_welcome_heading_size</item>
        <item name="android:padding">@dimen/text_heading_padding</item>
    </style>

    <style name="TextHeadingSecondary">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">@dimen/text_heading_size</item>
    </style>

    <style name="SettingsElement">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/settings_element_text_size</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="TextHeadingSecondary.Small">
        <item name="android:textSize">@dimen/text_heading_small_size</item>
    </style>

    <style name="TextHeadingSecondary.Small.Capitalize" parent="TextHeadingSecondary.Small">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="EditTextPrimary">
        <item name="android:paddingBottom">@dimen/edit_text_bottom_padding</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="EditTextPrimary.PushRight">
        <item name="android:layout_marginStart">@dimen/edit_text_push_right</item>
    </style>

    <style name="ImageButton">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">@dimen/image_button_dimen</item>
        <item name="android:layout_height">@dimen/image_button_dimen</item>
        <item name="android:padding">@dimen/image_button_padding</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="ChatListTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/ChatListTabLayoutTextAppearance</item>
    </style>

    <style name="ChatListTabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="PostHeaderStyle">
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:paddingEnd">@dimen/large</item>
        <item name="android:paddingLeft">@dimen/large</item>
        <item name="android:paddingRight">@dimen/large</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/large</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/list_item_chat_date_size</item>
        <item name="android:height">24dp</item>
    </style>

    <style name="DrawerItemTextAppearance">
        <item name="android:textSize">@dimen/drawer_item_text_size</item>
        <item name="typeface">roboto_regular</item>
    </style>

    <style name="SwitchStyle">
        <item name="colorControlActivated">@color/primaryStart</item>
    </style>
</resources>
